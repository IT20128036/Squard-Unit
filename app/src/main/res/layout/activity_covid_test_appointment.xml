<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Covid_Test_Appointment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient Details"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:hint="@string/etname"
            android:padding="10dp"
            android:background="@drawable/edit_background"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"/>

        <EditText
            android:id="@+id/etage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:hint="@string/etage"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:background="@drawable/edit_background"
            android:drawableLeft="@drawable/ic_baseline_accessibility_24"/>


        <EditText
            android:id="@+id/etphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:hint="@string/etphone"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:background="@drawable/edit_background"
            android:drawableLeft="@drawable/ic_baseline_local_phone_24"/>


        <EditText
            android:id="@+id/etaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:hint="@string/etaddress"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:background="@drawable/edit_background"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"/>


        <EditText
            android:id="@+id/etapoidate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:hint="@string/etapoidate"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:background="@drawable/edit_background"
            android:drawableLeft="@drawable/ic_baseline_date_range_24"/>

        <Spinner

            android:id="@+id/selecttype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:entries="@array/type"
            android:padding="10dp"
            android:background="@drawable/edit_background"/>

        <Button
            android:id="@+id/btnsub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:background="@drawable/edit_btn" />

        <Button
            android:id="@+id/btnshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="50dp"
            android:text="View"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:background="@drawable/edit_btn" />




    </LinearLayout>


</ScrollView>
